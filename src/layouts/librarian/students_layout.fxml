<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../styles/global.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.librarian.StudentsController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TableView fx:id="userTableView" editable="true" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="serialTableColumn" prefWidth="75.0" text="#" />
                <TableColumn fx:id="usernameTableColumn" prefWidth="75.0" text="Username" />
                  <TableColumn fx:id="roleTableColumn" prefWidth="75.0" text="Role" />
                  <TableColumn fx:id="createdAtTableColumn" prefWidth="75.0" text="Created At" />
                  <TableColumn prefWidth="75.0" text="Actions">
                     <columns>
                        <TableColumn fx:id="deleteTableColumn" prefWidth="75.0" />
                        <TableColumn fx:id="modifyTableColumn" prefWidth="75.0" />
                     </columns></TableColumn>
              </columns>
            </TableView>
         </center>
         <bottom>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                <Button mnemonicParsing="false" onAction="#addUser" prefHeight="26.0" prefWidth="76.0" text="Add">
                     <graphic>
                        <ImageView fitHeight="13.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/add.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <TextField fx:id="usernameTextField" promptText="Username" />
                  <PasswordField fx:id="passwordField" promptText="Password" />
                  <Button mnemonicParsing="false" onAction="#clear" text="Clear" />
              </items>
            </ToolBar>
         </bottom>
         <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                  <TextField fx:id="searchTextField" />
                <Button  mnemonicParsing="false" onAction="#search" text="Search">
                     <graphic>
                        <ImageView fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/search.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="resetButton" mnemonicParsing="false" text="Reset">
                     <graphic>
                        <ImageView fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../img/reset.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
              </items>
            </ToolBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
