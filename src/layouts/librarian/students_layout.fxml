<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.librarian.StudentsController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TableView fx:id="userTableView" editable="true" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="serialTableColumn" prefWidth="75.0" text="#" />
                <TableColumn fx:id="usernameTableColumn" prefWidth="75.0" text="Username" />
                  <TableColumn fx:id="roleTableColumn" prefWidth="75.0" text="Role" />
                  <TableColumn fx:id="createdAtTableColumn" prefWidth="75.0" text="Created At" />
                  <TableColumn fx:id="deleteTableColumn" prefWidth="75.0" text="Actions" />
              </columns>
            </TableView>
         </center>
         <bottom>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#addUser" prefHeight="26.0" prefWidth="76.0" text="Add" />
                  <TextField fx:id="usernameTextField" promptText="Username" />
                  <PasswordField fx:id="passwordField" promptText="Password" />
                  <Button mnemonicParsing="false" onAction="#clear" text="Clear" />
              </items>
            </ToolBar>
         </bottom>
         <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                  <TextField fx:id="searchTextField" />
                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#search" text="Search" />
                  <Button fx:id="resetButton" mnemonicParsing="false" text="Reset" />
              </items>
            </ToolBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
